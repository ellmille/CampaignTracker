<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="playableCharacter"
            type="com.elle.campaigntracker.data.model.PlayableCharacter"/>
        <variable
            name="points"
            type="String"/>
        <variable
            name="callback"
            type="com.elle.campaigntracker.view.callback.SaveCallback.XpSave"/>
    </data>

    <android.support.constraint.ConstraintLayout
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.elle.campaigntracker.view.XpFragment">

        <TextView
            android:id="@+id/xp_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/detail_text_size"
            android:layout_margin="@dimen/character_sheet_margin"
            android:text="@{String.valueOf(playableCharacter.currentXp)+'/'+String.valueOf(playableCharacter.totalXpToLevel), default=4000}"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/pointsLabel"
            android:labelFor="@+id/xp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/points"
            android:textSize="@dimen/detail_text_size"
            android:layout_margin="@dimen/character_sheet_margin"
            app:layout_constraintTop_toTopOf="@+id/xp"
            app:layout_constraintBottom_toBottomOf="@+id/xp"
            app:layout_constraintEnd_toStartOf="@+id/xp"/>

        <EditText
            android:id="@+id/xp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:layout_margin="@dimen/character_sheet_margin"
            android:inputType="number"
            app:intToText="@={points}"
            app:layout_constraintTop_toBottomOf="@+id/xp_textView"
            app:layout_constraintStart_toEndOf="@+id/pointsLabel"/>

        <Button
            android:id="@+id/heal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@+id/xp"
            app:layout_constraintBottom_toBottomOf="@+id/xp"
            app:layout_constraintStart_toEndOf="@+id/xp"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="@string/add_xp"
            android:onClick="@{() -> callback.onSave(points)}"/>
    </android.support.constraint.ConstraintLayout>
</layout>